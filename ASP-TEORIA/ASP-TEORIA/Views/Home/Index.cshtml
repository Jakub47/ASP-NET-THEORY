@model List<ASP_TEORIA.Models.Kursy>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div>
    <ul>
        @foreach(var item in Model)
        {
            <li>
                @item.Nazwa - @item.Opis
            </li>
        }
    </ul>

    @if(Model.Count == 0)
    {
        <span>
            Brak kursow!
        </span>
    }
    else
    {
        var i = Model.Count;
        <span>@i</span>
    }

    <span @if( Model.Count != 0) { <text> style="display: none;"</text>}>Chwilowy brak kursów</span>
</div>
