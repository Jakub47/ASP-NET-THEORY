
@{
                /**/

                ViewBag.Title = "Index";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/MicrosoftAjax.js"></script>
<script src="~/Scripts/MicrosoftMvcAjax.js"></script>

@using (Ajax.BeginForm("DodajKomentarz", new AjaxOptions()
{
    UpdateTargetId = "Komentarze",
    InsertionMode = InsertionMode.InsertAfter,
    OnFailure = "alert('Komentarz posiada niepoprawny format');"
}))
{
    <div class="editor-label">
        @Html.Label("Podpis");
    </div>

    <div class="editor-field">
        @Html.TextBox("Podpis")
    </div>

    <div class="editor-label">
        @Html.Label("Komentarz");
    </div>

    <div class="editor-field">
        @Html.TextArea("Komentarz")
    </div>
  
    <input type="submit" value="Wyczyść formularz" />
    <input type="submit" value="Dodaj Komentarz" />

}

<h3>Lista komentarzy</h3>
<div id="Komentarze">

</div>


